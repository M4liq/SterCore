@page
@model ChangeDepartmentView

@{
    ViewData["Title"] = "Login";
}
<div class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <h1>Wybierz Widok Organizacji</h1>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <form id="account" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Input.DepartmentId" class="control-label"></label>
                        <div class="input-group">
                            @Html.DropDownListFor(q => q.Input.DepartmentId, new SelectList(Model.Departments as IEnumerable<SelectListItem>, "Value", "Text"), "Wybierz dział", new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="row">
                        <button type="submit" class="btn btn-primary">Ustaw widok</button> 
                        <!-- /.col -->
                    </div>

                </form>

            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
