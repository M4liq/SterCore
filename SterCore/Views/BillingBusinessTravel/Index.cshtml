@model IEnumerable<leave_management.Models.BillingBusinessTravelVM>
@*@model BillingBusinessTravelVM*@
@{
    ViewData["Title"] = "Index";
}

<h1>Szczegóły rozliczeń</h1>

<p>
    <a asp-action="Create" class="btn btn-success"> <i class="fa fa-plus" aria-hidden="true"></i> Dodaj rozliczenie</a>
</p>
<table id="tblData" class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Employee.Firstname) @Html.DisplayNameFor(model => model.Employee.Lastname)
            </th>
            <th>
                Data Zlecenia
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BusinessTravel.DateFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BusinessTravel.DateTo)
            </th>
            <th>
                Miejsce docelowe
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BusinessTravel.ApplicationId)
            </th>
            <th>
                Zestawienie kosztów
            </th>

            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.Firstname) @Html.DisplayFor(modelItem => item.Employee.Lastname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BusinessTravel.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BusinessTravel.DateFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BusinessTravel.DateTo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BusinessTravel.DestinationCity) Kraj:@Html.DisplayFor(modelItem => item.BusinessTravel.DestinationCountry)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BusinessTravel.ApplicationId)
            </td>
            <td>
                Zestawienie kosztów Placeholder :o 
            </td>

            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">
                    <i class="fa fa-pencil-alt" aria-hidden="true"></i>
                </a>
                <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id">
                    <i class="fa fa-info-circle" aria-hidden="true"></i>
                </a>
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this record?')">
                    <i class="fa fa-trash" aria-hidden="true"></i>
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>
