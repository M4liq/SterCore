@model leave_management.Models.BusinessTravelVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group date">
                <label asp-for="DateFrom" class="control-label"></label>
                <input asp-for="DateFrom" value="@DateTime.Now.Date" type="text" class="form-control dateFrom" />
                <span asp-validation-for="DateFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateTo" class="control-label"></label>
                <input asp-for="DateTo" value="@DateTime.Now.Date" type="text" class="form-control dateTo" />
                <span asp-validation-for="DateTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DestinationCountry" class="control-label"></label>
                <input asp-for="DestinationCountry" class="form-control" />
                <span asp-validation-for="DestinationCountry" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DestinationCity" class="control-label"></label>
                <input asp-for="DestinationCity" class="form-control" />
                <span asp-validation-for="DestinationCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PurposeOfTravel" class="control-label"></label>
                <input asp-for="PurposeOfTravel" class="form-control" />
                <span asp-validation-for="PurposeOfTravel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransportVehicle" class="control-label"></label>
                <input asp-for="TransportVehicle" class="form-control" />
                <span asp-validation-for="TransportVehicle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdditionalInfo" class="control-label"></label>
                <input asp-for="AdditionalInfo" class="form-control" />
                <span asp-validation-for="AdditionalInfo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrepaymentAmount" class="control-label"></label>
                <input asp-for="PrepaymentAmount" class="form-control" />
                <span asp-validation-for="PrepaymentAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrepaymentCurrency" class="control-label"></label>
                <input asp-for="PrepaymentCurrency" class="form-control" />
                <span asp-validation-for="PrepaymentCurrency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationId" class="control-label"></label>
                <input asp-for="ApplicationId" class="form-control" />
                <span asp-validation-for="ApplicationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
                @Html.DropDownListFor(q => q.EmployeeId, new SelectList(Model.Employees, "Value", "Text"), "Wybór pracownika", new { @class = "form-control" })
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

