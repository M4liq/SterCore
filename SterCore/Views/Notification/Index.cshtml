@model IEnumerable<leave_management.Models.NotificationVM>

@{
    ViewData["Title"] = "Powiadomienia";
}

<h1>Powiadomienia</h1>
@if (User.IsInRole("Administrator") || User.IsInRole("Agent") || User.IsInRole("Employer"))
{
    <p>
        <a class="btn btn-success" asp-action="Create"><i class="fa fa-user-plus"></i> Przypisz powiadomienie</a>
        <a class="btn btn-success" asp-action="Index" asp-controller="NotificationType"><i class="fa fa-plus-circle"></i> Dodaj typ powiadomienia</a>

    </p>
}
    <table id="tblData" class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeFullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NotificationTypeName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateOfNotification)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateValidUntil)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeFullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NotificationTypeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfNotification)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateValidUntil)
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">
                            <i class="fa fa-pencil-alt" aria-hidden="true"></i>
                        </a>
                        <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id">
                            <i class="fa fa-info-circle" aria-hidden="true"></i>
                        </a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id" onclick="return confirm('Jesteś pewny że chcesz usunąć ten wpis?')">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
