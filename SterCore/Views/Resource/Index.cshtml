@model IEnumerable<leave_management.Models.ResourceVM>

@{
    ViewData["Title"] = "Zasoby";
}

<h1>Zasoby</h1>
@if (User.IsInRole("Administrator") || User.IsInRole("Agent") || User.IsInRole("Employer"))
{
    <p>
        <a class="btn btn-success" asp-action="Create"><i class="fa fa-user-plus"></i> Przypisz zasób</a>
        <a class="btn btn-success" asp-action="Index" asp-controller="ResourceType"><i class="fa fa-plus-circle"></i> Dodaj zasób</a>

    </p>
}
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeFullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ResourceTypeName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateFrom)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateUntil)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AdditionalInfo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsReturned)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeFullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ResourceTypeName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeFullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ResourceTypeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateFrom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateUntil)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AdditionalInfo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsReturned)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeFullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ResourceTypeName)
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">
                            <i class="fa fa-pencil-alt" aria-hidden="true"></i>
                        </a>
                        <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id">
                            <i class="fa fa-info-circle" aria-hidden="true"></i>
                        </a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id" onclick="return confirm('Jesteś pewny że chcesz usunąć ten wpis?')">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
